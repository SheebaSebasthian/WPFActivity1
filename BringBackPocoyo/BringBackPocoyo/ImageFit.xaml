<Page x:Class="BringBackPocoyo.ImageFit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BringBackPocoyo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImageFit">
    <!--<Grid>
    </Grid>-->
    <Border BorderBrush="Navy" Background="Lavender" BorderThickness="2" Name="border1" Margin="20">
        <StackPanel Orientation="Horizontal">
            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Height="80" Width="80">
                <Image Source="Images/Hector.jpg" Stretch="Fill"  />
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Height="80" Width="80">
                <Image Source="Images/Button moon.jpg" Stretch="Fill"  />
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Height="80" Width="80">
                <Image Source="Images/Sean.jpg" Stretch="Fill"  />
            </Border>
        </StackPanel>
    </Border>
</Page>
